{
  "name": "screen-time-tracker",
  "version": "1.0.0",
  "description": "A comprehensive screen time tracking app for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "screen-time",
    "productivity",
    "tracking",
    "windows",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "moment": "^2.29.4",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.screentimetracker.app",
    "productName": "Screen Time Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
