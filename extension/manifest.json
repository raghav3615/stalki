{
  "manifest_version": 3,
  "name": "Stalki - Browser Time Tracker",
  "version": "1.0",
  "description": "Tracks how much time you spend on each tab.",
  "permissions": ["tabs", "storage", "activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}